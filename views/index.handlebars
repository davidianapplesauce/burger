<img src = "/public/assets/mark.jpg" class = "img-responsive center-block">
<h1 class="text-center">Burgerazzi!</h1>

<div class="col-xs-12">

    <div class="col-xs-6">
        {{#each burger}}
        {{#unless this.devoured}}
        <div class="well">

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">

                <button type="submit" class="btn btn-success">Devour</button>
            </form>

            <p> {{this.id}}. {{this.burger_name}}</p>
        </div>


        {{/unless}}
        {{/each}}
    </div>


    <div class="col-xs-6">
        {{#each burger}}
        {{#if this.devoured}}
        <div class="well" id="eaten">
            <p> {{this.id}}. {{this.burger_name}}
            </p>
        </div>
        {{/if}}
        {{/each}}
    </div>



    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
            <form action="/" method="POST">
                <div class="form-group">
                    <label for="input">Add Your Burger</label>
                    <textarea type="text" class="form-control" name="input" placeholder="new Burger"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" id="submit">Submit</button>
            </form>
        </div>
        <div class="col-xs-3"></div>
    </div>